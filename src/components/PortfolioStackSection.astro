<section class="portfolio-stack">
  <div class="padding-global">
    <div class="container-large">
      <div class="padding-section-large">
        <div class="margin-bottom-xxl">
          <div class="max-width-large">
            <div class="margin-bottom-xsmall">
              <div class="text-weight-semibold">Portfolio</div>
            </div>
            <div class="margin-bottom margin-bottom-small">
              <h2>Short heading goes here</h2>
            </div>
            <p class="text-size-medium">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            </p>
          </div>
        </div>
        <div class="portfolio-component">
          <div class="portfolio-list-wrapper">
            <div class="portfolio-list">
              <div class="portfolio-item">
                <a href="#" class="portfolio_image-link">
                  <div class="portfolio_image-wrapper">
                    <img
                      src="https://source.unsplash.com/random"
                      loading="lazy"
                      alt=""
                      class="portfolio_image"
                    />
                  </div>
                </a>
                <div class="portfolio_title-wrapper">
                  <div class="portfolio_content-top">
                    <a href="#" class="portfolio_title-link">
                      <h3 class="heading-style-h4">Project name here</h3>
                    </a>
                    <div class="text-size-regular">
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                      Suspendisse varius enim in eros.
                    </div>
                    <div class="portfolio_tag-list">
                      <a href="#" class="portfolio_tag-item">
                        <div>Tag one</div>
                      </a>
                      <a href="#" class="portfolio_tag-item">
                        <div>Tag two</div>
                      </a>
                      <a href="#" class="portfolio_tag-item">
                        <div>Tag three</div>
                      </a>
                    </div>
                  </div>
                  <div class="margin-top-medium">
                    <a href="#" class="button is-link is-icon w-inline-block">
                      <div>View project</div>
                      <div class="icon-embed-xxsmall">
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 16 16"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M6 3L11 8L6 13"
                            stroke="CurrentColor"
                            stroke-width="1.5"></path>
                        </svg>
                      </div>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="margin-top-xlarge">
            <div class="button-group is-center">
              <a href="#" class="button is-secondary w-button">View all</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .padding-global {
    padding-left: 5%;
    padding-right: 5%;
  }

  .container-large {
    width: 100%;
    max-width: 80rem;
    margin-left: auto;
    margin-right: auto;
  }

  .padding-section-large {
    padding-top: 7rem;
    padding-bottom: 7rem;
  }

  .margin-bottom-xxlarge {
    margin-bottom: 5rem;
  }

  .max-width-large {
    width: 100%;
    max-width: 48rem;
  }

  .margin-bottom-xsmall {
    margin-bottom: 1rem;
  }

  .text-weight-semibold {
    font-weight: 600;
  }

  .margin-bottom-small {
    margin-bottom: 1.5rem;
  }

  .text-size-medium {
    font-size: 1.125rem;
  }

  .portfolio-component {
    flex-direction: column;
    align-items: center;
  }

  .portfolio-list {
    flex-direction: column;
    grid-template-rows: auto;
    grid-template-columns: 1fr;
    grid-auto-columns: 1fr;
    display: grid;
  }

  .portfolio-item {
    grid-column-gap: 5rem;
    border-top: 1px solid black;
    grid-template-rows: auto;
    grid-template-columns: 1fr 1fr;
    grid-auto-columns: 1fr;
    align-items: center;
    padding-top: 3rem;
    padding-bottom: 3rem;
    display: grid;
  }

  .portfolio-item:last-child {
    padding-bottom: 0;
  }

  .portfolio_image-link {
    width: 100%;
  }

  .portfolio_image-wrapper {
    width: 100%;
    overflow: hidden;
  }

  .portfolio_image {
    width: 100%;
    height: 100%;
    aspect-ratio: 4 / 3;
    object-fit: cover;
  }

  .portfolio_title-wrapper {
    flex-direction: column;
    grid-template-rows: auto;
    grid-template-columns: 1fr max-content;
    grid-auto-columns: 1fr;
    justify-content: center;
    align-items: flex-start;
    display: flex;
  }

  .portfolio_title-link {
    margin-bottom: 0.5rem;
    text-decoration: none;
    display: block;
  }

  .heading-style-h4 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .text-size-regular {
    font-size: 1rem;
  }

  .portfolio_tag-list {
    grid-column-gap: 0.5rem;
    grid-row-gap: 0.5rem;
    flex-flow: wrap;
    margin-top: 1rem;
    display: flex;
  }

  .portfolio_tag-item {
    background-color: var(--base-color-neutral--neutral-lightest);
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
  }

  .margin-top-medium {
    margin-top: 2rem;
  }

  .icon-embed-xxsmall {
    width: 1rem;
    height: 1rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    display: flex;
  }

  .margin-top-xlarge {
    margin-top: 4rem;
  }

  .button-group {
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
    display: flex;
  }

  .button-group.is-center {
    justify-content: center;
  }

  @media screen and (max-width: 991px) {
    .padding-section-large {
      padding-top: 6rem;
      padding-bottom: 6rem;
    }

    .margin-bottom-xxlarge {
      margin-bottom: 4.5rem;
    }

    .portfolio-item {
      grid-column-gap: 3rem;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .heading-style-h4 {
      font-size: 1.75rem;
    }

    .margin-top-xlarge {
      margin-top: 3.5rem;
    }
  }

  @media screen and (max-width: 767px) {
    .padding-section-large {
      padding-top: 4rem;
      padding-bottom: 4rem;
    }

    .margin-bottom-xxlarge {
      margin-bottom: 3rem;
    }

    .margin-bottom-xsmall {
      margin-bottom: 0.75rem;
    }

    .margin-bottom-small {
      margin-bottom: 1.25rem;
    }

    .text-size-medium {
      font-size: 1rem;
    }

    .portfolio-list {
      grid-template-columns: 1fr;
    }

    .portfolio-item {
      grid-row-gap: 1.5rem;
      grid-template-columns: 1fr;
    }

    .portfolio_title-wrapper {
      flex-direction: column;
      grid-template-columns: 1fr;
      justify-items: start;
    }

    .heading-style-h4 {
      font-size: 1.5rem;
      line-height: 1.4;
    }

    .margin-top-medium {
      margin-top: 1.5rem;
    }

    .margin-top-xlarge {
      margin-top: 2.5rem;
    }
  }
</style>
