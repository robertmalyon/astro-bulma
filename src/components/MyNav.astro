---
import { Image } from 'astro:assets';
import mainLogo from '../assets/Stacked_200px_width_png.png';
---

<header class="main-nav">
  <div class="padding-global">
    <div class="container-large">
      <div class="my-navbar">
        <div class="top-bar">
          <div class="navbar-brand">
            <Image src={mainLogo} alt="Company logo" />
          </div>
          <div class="menu-button">
            <input
              type="checkbox"
              id="checkbox3"
              class="checkbox3 visuallyHidden"
            />
            <label for="checkbox3">
              <div class="hamburger hamburger3">
                <span class="bar bar1"></span>
                <span class="bar bar2"></span>
                <span class="bar bar3"></span>
                <span class="bar bar4"></span>
              </div>
            </label>
          </div>
        </div>
        <div class="nav">
          <a href="/" class="nav-link">Home</a>
          <a href="/about" class="nav-link">Work</a>
          <a href="/blog" class="nav-link">Services</a>
          <a href="/contact" class="nav-link"
            ><button class="button is-info">Contact Us</button></a
          >
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .main-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    transition: background-color 0.5s ease-in-out; /* Transition the background color */
    background-color: #eeece9; /* Remove this for transparent */
  }

  .main-nav.white-bg-click,
  .main-nav.white-bg-scroll {
    background-color: white;
  }

  .padding-global {
    padding-left: 5%;
    padding-right: 5%;
  }

  .container-large {
    width: 100%;
    max-width: 80rem;
    margin-left: auto;
    margin-right: auto;
  }

  .my-navbar {
    padding: 1rem 0;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    display: flex;
  }

  .top-bar {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }

  .nav a {
    margin-left: 2rem;
    text-decoration: none;
    color: #000;
    font-weight: 600;
  }

  .menu-button {
    display: none;
  }

  .hamburger {
    margin: 0 auto;
    width: 30px;
    height: 30px;
    position: relative;
  }

  .hamburger .bar {
    padding: 0;
    width: 30px;
    height: 4px;
    background-color: black;
    display: block;
    border-radius: 4px;
    transition: all 0.4s ease-in-out;
    position: absolute;
  }

  .bar1 {
    top: 0;
  }

  .bar2,
  .bar3 {
    top: 13.5px;
  }

  .bar3 {
    right: 0;
  }

  .bar4 {
    bottom: 0;
  }

  .hamburger3 .bar1 {
    transform-origin: 5%;
  }

  .hamburger3 .bar4 {
    transform-origin: 5%;
  }

  .checkbox3:checked + label > .hamburger3 > .bar1 {
    transform: rotate(45deg);
    height: 3px;
    width: 42px;
  }

  .checkbox3:checked + label > .hamburger3 > .bar3 {
    transform: rotate(45deg);
    height: 3px;
    background-color: transparent;
  }

  .checkbox3:checked + label > .hamburger3 > .bar2 {
    transform: rotate(-45deg);
    height: 3px;
    background-color: transparent;
  }

  .checkbox3:checked + label > .hamburger3 > .bar4 {
    transform: rotate(-45deg);
    height: 3px;
    width: 42px;
  }

  .visuallyHidden {
    position: absolute;
    overflow: hidden;
    clip: rect(0 0 0 0);
    height: 1px;
    width: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
  }

  .navbar-brand {
    width: 6rem;
  }

  @media screen and (max-width: 991px) {
    .padding-section-large {
      padding-top: 6rem;
      padding-bottom: 6rem;
    }
  }

  @media screen and (max-width: 767px) {
    .padding-section-large {
      padding-top: 4rem;
      padding-bottom: 4rem;
    }

    .menu-button {
      display: block;
    }

    .my-navbar {
      flex-direction: column;
    }

    .nav {
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
      width: 100%;
      visibility: hidden; /* Start with the nav hidden */
      opacity: 0;
      max-height: 0; /* Start with height 0 */
      overflow: hidden; /* Prevent content from being visible */
      transition:
        opacity 0.5s ease-in-out,
        visibility 0.5s ease-in-out,
        max-height 0.5s ease-in-out; /* Transition the opacity, visibility and max-height */
    }

    .nav.active {
      visibility: visible; /* When active, nav is visible */
      opacity: 1;
      max-height: 100vh; /* When active, nav has a height (adjust as needed) */
    }

    .nav a {
      margin-left: 0;
      margin-bottom: 1rem;
    }

    .nav a:first-child {
      margin-top: 1rem;
    }

    .nav a:last-child {
      margin-bottom: 0;
    }
  }
</style>

<script>
  const hamburger = document.querySelector('.hamburger');
  const nav = document.querySelector('.nav');
  const mainNav = document.querySelector('.main-nav');

  hamburger.addEventListener('click', () => {
    hamburger.classList.toggle('active');
    nav.classList.toggle('active');
    if (nav.classList.contains('active')) {
      mainNav.classList.add('white-bg-click');
    } else {
      mainNav.classList.remove('white-bg-click');
    }
  });

  // Add the white-bg class when the page is scrolled
  window.addEventListener('scroll', () => {
    if (window.scrollY > 0) {
      mainNav.classList.add('white-bg-scroll');
    } else {
      mainNav.classList.remove('white-bg-scroll');
    }
  });
</script>
